@model CityViewModel
@{
    ViewData["Title"] = "Cities";
}


<h1>City Index</h1>

<a asp-action="Create">Create City</a>
<hr />

@if (Model != null && Model.Cities != null && Model.Cities.Count > 0)
{
    <h2>List of Cities</h2>
    <table>
        <thead>
            <tr>
                <th>City Name</th>
                <th>Country</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cities)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Nation.Name</td>
                    <td>

                        <a asp-action="Edit" asp-controller="City" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Details" asp-controller="City" asp-route-id="@item.Id" class="btn btn-info">Details</a>

                        <a asp-action="Delete" asp-controller="City" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No Cities created.</p>
}
