@model Person
@{
    var showAction = (bool)ViewData["ShowPersonDeleteButton"];
    var showHeader = (bool)ViewData["ShowHeader"];
}
@if (Model != null)
{
    if (showHeader)
    {
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-2">
                        <h5>First name</h5>
                    </div>
                    <div class="col-3">
                        <h5>Last name</h5>
                    </div>
                    <div class="col-3">
                        <h5>City</h5>
                    </div>
                    <div class="col-2">
                        <h5>Phone Nr</h5>
                    </div>
                    @if (showAction)
                    {
                        <div class="col-2">
                            <h5>Action</h5>
                        </div>
                    }

                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-2"><p>@Model.FirstName</p></div>
        <div class="col-3"><p>@Model.LastName</p> </div>
        <div class="col-3"><p>@Model.City</p>     </div>
        <div class="col-2"><p>@Model.PhoneNr</p>  </div>
        @if (showAction)
        {
            <div class="col-2">
                <a asp-action="Remove" asp-route-id="@Model.Id" class="btn btn-danger">Remove</a>
            </div>
        }

    </div>
}
else
{
    <p>Person was not found.</p>
}

