@{
    var showActions = (bool)ViewData["ShowPersonDeleteButton"];
    ViewData["ShowHeader"] = false; //for _personPartialView
}
@model List<Person>

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-2">
                    <h5>First name</h5>
                </div>
                <div class="col-3">
                    <h5>Last name</h5>
                </div>
                <div class="col-3">
                    <h5>City</h5>
                </div>
                <div class="col-2">
                    <h5>Phone Nr</h5>
                </div>
                @if (showActions)
                {
                    <div class="col-2">
                        <h5>Action</h5>
                    </div>
                }

            </div>
        </div>
    </div>
    @foreach (Person person in Model)
    {
        <partial name="_personPartialView" model="person" view-data="ViewData" />
    }
}
else
{
    <p>No people to show.</p>
}
