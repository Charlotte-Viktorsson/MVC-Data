@model List<Language>
@{
    ViewData["Title"] = "Language Index";
}

<h1>Language Index</h1>

<a asp-action="Create">Create Language</a>

<hr />

@if (Model != null && Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Language</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Language" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Details" asp-controller="Language" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-controller="Language" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Languages created.</p>
}