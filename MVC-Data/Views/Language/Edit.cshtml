@model EditLanguageViewModel
@{
    ViewData["Title"] = "Edit Language";
}

<h1>Edit Language</h1>

<form asp-action="Edit" method="post">
    <input asp-for="@Model.Id" hidden />

    <label asp-for="@Model.CreateVM.Name"></label>
    <input asp-for="@Model.CreateVM.Name" />
    <span asp-validation-for="@Model.CreateVM.Name"></span>

    <a asp-action="Index" class="btn btn-info">Back to Language List</a>
    <button class="btn btn-primary">Update</button>

</form>