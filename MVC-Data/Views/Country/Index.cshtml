@model CountryViewModel
@{
    ViewData["Title"] = "Countries";
}
<h1>Country Index</h1>

<a asp-action="Create" class="btn btn-info">Create Country</a>

<hr />

@if (Model != null && Model.Countries.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Name</th>

                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Countries)
            {
                <tr>
                    <td>@item.Name</td>

                    <td>

                        <a asp-action="Edit" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Details" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No Countries created.</p>
}
